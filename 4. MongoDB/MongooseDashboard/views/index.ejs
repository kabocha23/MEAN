<html>
    <head>
        <meta charset="utf-8">
        <title>Mongoose Dashboard</title>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script type ="text/javascript"></script>
    </head>
    <body>
        <h1>Mongoose Dashboard</h1>
        <% for(var i=0; i < mongooseList.length; i++) { %>
            <p>Mongoose name: <a href="/mongooses/<%= mongooseList[i]._id %>"> <%= mongooseList[i].name %> </a> </p>
            <p>Mongoose weight: <%= mongooseList[i].weight %> kg</p>
            <p>Mongoose favorite Phrase: "<%= mongooseList[i].phrase %>"</p>
            <form action="/mongooses/destroy/<%= mongooseList[i]._id %>" method="post">
                <button onclick="action">Remove Mongoose</button>
            </form>
            <a href="/mongooses/edit/<%= mongooseList[i]._id %>">
                <button onclick="href">Edit Mongoose</button>
            </a>
        <% } %>
            <a href="/mongooses/new">
                <button onclick="href">Add a New Mongoose</button>
            </a>
        </div>
    </body>
</html>